#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
    background_color_normal: ''
    background_color: hex("#000000")

<VendasWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: hex('#BA55D3')
        Rectangle:
            size:self.size
            pos:self.pos    
    
    #Menu
    BoxLayout:
        size_hint_y: 0.1
        spacing: '.5'

        Label:
            id: lbl_bemvindo
            size_hint_x: 0.3
            text: "Bem-vindo, Carlos!"
            color: hex('#FFFFFF')

        GridLayout:
            size_hint_x: 0.25
            rows: 2
            cols: 2
            Label:
                text: "Data"
                color: hex('#FFFFFF')
            Label:
                id: lbl_data
                color: hex('#FFFFFF')
            Label:
                text: 'Hora'
                color: hex('#FFFFFF')
            Label:
                id: lbl_hora
                color: hex('#FFFFFF')
        Label:
            size_hint_x: 0.2
        Btn:
            id: btn_admin
            size_hint_x: 0.15
            text: "Administrador"
            color: hex('#FFFFFF')
            on_release: root.admin()
        Btn:
            id: btn_sair
            size_hint_x: 0.15
            text: "Sair"
            color: hex('#FFFFFF')
            on_release: root.sair()

    #Conteúdo
    BoxLayout:
        canvas.before:
            Color:
                rgba: hex('#FA8072')
            Rectangle:
                size:self.size
                pos:self.pos            
        size_hint_y: 0.85

        BoxLayout:
            size_hint_x: 0.75

            BoxLayout:
                size_hint_y: 0.8
                orientation: 'vertical'

            BoxLayout:
                size_hint_y: 0.1
                spacing: 0.5

                Btn:
                    text: 'Deletar'

                Btn:
                    text: 'Atualizar Qtd'

        BoxLayout:
            size_hint_x: 0.3
            canvas.before:
                Color:
                    rgba: hex('#FFFFAA')
                Rectangle:
                    size:self.size
                    pos:self.pos

    #Rodapé        
    BoxLayout:
        size_hint_y: 0.03