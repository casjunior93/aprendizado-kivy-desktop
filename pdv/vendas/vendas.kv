#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
    background_color_normal: ''
    background_color: hex("#FFFF00")

<VendasWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: hex('#BA55D3')
        Rectangle:
            size:self.size
            pos:self.pos    
    BoxLayout:
        size_hint_y: 0.1
        spacing: '.5'

        Label:
            id: lbl_bemvindo
            size_hint_x: 0.3
            text: "Bem-vindo, Carlos!"
            color: hex('#FFD700')

        GridLayout:
            size_hint_x: 0.25
            rows: 2
            cols: 2
            Label:
                text: "Data"
                color: hex('#FFD700')
            Label:
                id: lbl_data
                color: hex('#FFD700')
            Label:
                text: 'Hora'
                color: hex('#FFD700')
            Label:
                id: lbl_hora
                color: hex('#FFD700')
        Label:
            size_hint_x: 0.2
        Btn:
            id: btn_admin
            size_hint_x: 0.15
            text: "Administrador"
            color: hex('#FF0000')
            on_release: root.admin()
        Btn:
            id: btn_sair
            size_hint_x: 0.15
            text: "Sair"
            color: hex('#FF0000')
            on_release: root.sair()

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex('#FF0000')
            Rectangle:
                size:self.size
                pos:self.pos            
        size_hint_y: 0.9
        Label:
            text: "Box 2"
    BoxLayout:
        size_hint_y: 0.05
        Label:
            text: "Box 3"